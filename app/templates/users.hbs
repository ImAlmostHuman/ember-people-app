<h1>A List of all of the users</h1>
<div class="row">
  {{#each model as |user|}}
    <div class="col-md-4">
      <div class="panel panel-default user-item">
        <div class="panel-heading">
          <h3 class="panel-title">{{user.title}} {{user.name}}</h3>
        </div>
        <div class="panel-body">
          <p>Gender: {{user.gender}}</p>
          {{#if user.active}}
			<p>Active: Yes</p>
		{{else}}
			<p>Active: No</p>
		{{/if}}
        </div>
        <div class="panel-footer text-right">
          {{#link-to 'user.edit' users.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
          <button class="btn btn-danger btn-xs" {{action 'deleteUser' user}}>Delete</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>