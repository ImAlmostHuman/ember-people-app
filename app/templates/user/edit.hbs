<h2>Add a new User</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
{{#x-select value='Mr' action="selectTitle" as |xs|}}
  {{#xs.option value=mr}}Mr{{/xs.option}}
  {{#xs.option value=mrs}}Mrs{{/xs.option}}
  {{#xs.option value=dr}}Dr{{/xs.option}}
  {{#xs.option value=cpt}}Cpt{{/xs.option}}
{{/x-select}}    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-3">
      {{input type="text" value=model.name class="form-control" placeholder="The name of the User"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Gender</label>
    <div class="col-sm-10">
    <label>{{radio-button value='M' checked=selectedNumber}} Male</label>
	<label>{{radio-button value='F' checked=selectedNumber}} Female</label>
    </div>
        </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Is the User active?</label>
    <div class="col-sm-10">

		
	  {{input type="checkbox" name="UserActiveCheckbox" checked=UserActiveCheckbox}}

    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveUser' model}}>Add to user list</button>
    </div>
  </div>
</div>



